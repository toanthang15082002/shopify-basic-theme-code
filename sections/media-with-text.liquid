<style>
  .media-with-text-custom .container {
    display: flex;
    align-items: center;
    padding: 20px;
  }
  .media-with-text-custom .media-left .media {
    order: 1;
  }
  .media-with-text-custom .media-right .media {
    order: 2;
  }
  .media-with-text-custom .media img {
    max-width: 100%;
    height: auto;
    display: block;
  }
  .media-with-text-custom .text-content {
    padding: 20px;
  }
  .media-with-text-custom .button {
    display: inline-block;
    padding: 10px 20px;
    background-color: #000;
    color: #fff;
    text-decoration: none;
    margin-top: 10px;
  }

  /* CSS block product */
  .product-card {
    width: 100%;
    border: 1px solid #eee;
    border-radius: 10px;
    overflow: hidden;
    text-align: center;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    position: relative;
  }

  .search-icon {
    opacity: 0;
    visibility: hidden;
    position: absolute;
    width: 40px;
    height: 40px;
    top: 10px;
    right: 10px;
    padding: 10px;
    background-color: #c4744c;
    color: #fff;
    border: none;
    border-radius: 50%;
    cursor: pointer;
    transform: translateY(-20px);
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
  }

  .search-icon:hover {
    background-color: #e19b76;
  }

  .search-icon svg {
    width: 20px;
    height: 20px;
    fill: #ffffff;
  }

  .add-to-cart-btn {
    position: absolute;
    bottom: 12px;
    left: 50%;
    transform: translateX(-50%) translateY(20px);
    width: 90%;
    padding: 12px 20px;
    background-color: #c4744c;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    opacity: 0;
    visibility: hidden;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
  }

  .add-to-cart-btn span {
    position: relative;
    z-index: 1;
    font-weight: 500;
  }

  .add-to-cart-btn::before {
    content: '';
    position: absolute;
    top: -100%;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #e19b76;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .add-to-cart-btn:hover::before {
    top: 0;
  }

  .add-to-cart-btn.loading span {
    visibility: hidden;
  }

  .add-to-cart-btn.loading {
    cursor: not-allowed;
    opacity: 0.7;
  }

  .add-to-cart-btn.loading::after {
    content: '';
    position: absolute;
    width: 16px;
    height: 16px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    border: 3px solid transparent;
    border-top-color: currentColor;
    border-radius: 50%;
    animation: loading-spinner 0.6s linear infinite;
  }

  @keyframes loading-spinner {
    from {
      transform: translate(-50%, -50%) rotate(0deg);
    }
    to {
      transform: translate(-50%, -50%) rotate(360deg);
    }
  }

  .product-image {
    max-height: 100vh;
    overflow: scroll;
    position: relative;
    border-radius: 5px;
  }

  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: all 0.5s;
  }

  .product-image:hover .add-to-cart-btn {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
  }

  .product-image:hover .search-icon {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .product-image .add-to-cart-btn,
  .product-image .search-icon {
    will-change: transform, opacity, visibility;
  }

  .product-image .second-img {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
    visibility: hidden;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .product-image:hover .second-img {
    opacity: 1;
    visibility: visible;
  }

  .product-info {
    padding: 24px 10px;
  }

  .product-title {
    /* font-size: 14px; */
    color: #333;
    margin: 0;
    transition: color 0.3s;
    font-weight: bold;
    cursor: pointer;
  }

  .product-title:hover {
    color: #c4744c;
  }

  .compare-at-price {
    text-decoration: line-through;
  }

  .product-price {
    font-size: 14px;
    color: #555;
  }

  .product-grid {
    display: grid;
    gap: 16px;
  }

  .product-grid.columns-1 {
    grid-template-columns: repeat(1, 1fr);
  }

  .product-grid.columns-2 {
    grid-template-columns: repeat(2, 1fr);
  }

  .product-grid.columns-3 {
    grid-template-columns: repeat(3, 1fr);
  }

  .product-grid.columns-4 {
    grid-template-columns: repeat(4, 1fr);
  }

  @media (max-width: 1024px) {
    .product-grid.columns-4,
    .product-grid.columns-3 {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 767px) {
    .product-grid.columns-4,
    .product-grid.columns-3,
    .product-grid.columns-2 {
      grid-template-columns: repeat(1, 1fr);
    }
  }
</style>

<div class="media-with-text-custom">
